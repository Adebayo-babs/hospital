<%- include ('partials/header') %>


<% if (typeof error != 'undefined') { %>

        <% error.forEach(function(error){ %>

              <h5 style="color: red;"><%= error.msg %></h5>

        <% }) %>

      <% } %>

      <% if(success_msg != '') {%>
        <h6 style="color:green"><%= success_msg %></h6>

      <% } %>

      <% if(error_msg != '') { %>

        <h6 style="color:red"><%= error_msg %></h6>

      <% } %>

    <div class="form-1">

          
        <form action="/doctor/signup" method="POST" enctype="multipart/form-data">
        <%- include ('partials/messages') %>
            <h2>DOCTOR REGISTRATION FORM</h2>

            
            <div class="alert">
                <%- include ('partials/messages') %>
             
            </div>
            
              <p><input type="text" name="fName"  placeholder="First Name"></p>
              <p><input type="text" name="lName"  placeholder="Last Name"></p>
              <p>Short description about yourself: <br><textarea name="description" rows="7" cols="25"></textarea></p>
              <p><input type="email" name="cEmail"  placeholder="Contact Email"></p> 
              <p><input type="text" name="cNumber"  placeholder="Contact Phone Number"></p>

              <% let years = ["less than 1", "2-5", "6-10","11-20", "21-50", "51 and above"] %>
      
              <select name="yearsOfExp" id="" class="year">
                  <option value="">Years of Experience</option>
                  <% years.forEach(function(year){ %>
      
                      <option value="<%= year %>"><%= year %></option>
      
                  <% }) %>
                  
      
              </select><br>

             <p><input type="text" name="username"  placeholder="Preferred Username"></p> 
             <p><input type="password" name="password"  placeholder="Password must be at least 8 characters"></p> 
             <p><input type="password" name="password2"  placeholder="Confirm Password"></p> 
            <p>Profile Picture: <input type="file" name="image" placeholder="Upload your Profile Picture"></p>
      
             <input type="submit" name="signup" value="Click to Signup">
      
         </form>

    </div>
   
   


<center id="about">
    <div class="bfooter" id="pricing">
    <div class="media">
        <h3>Connect with Us</h3>
    <div class="platform fb"></div>
    <div class="platform tt"></div>
    <div class="platform ig"></div>
    <div class="platform wh"></div>

    </div>
    
</div>

</center>



</div>



</body>
</html>